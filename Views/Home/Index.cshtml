@using AMSProj.Data
@inject AppDBContext _context
@{
    var campuses = ViewBag.Campuses as List<AMSProj.Models.Campus>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .tile-wrapper {
        position: relative;
    }

    .tile-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 0.75rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        background-color: #0d6efd; /* Main Tile Color */
        color: #fff;
        font-size: 0.95rem;
        padding: 1rem 0.5rem;
        height: 170px;
    }

        .tile-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.2);
        }

    .tile-icon {
        font-size: 1.75rem;
        color: #fff;
    }

    .tile-title {
        font-size: 1rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .tile-link {
        text-decoration: none;
        color: #ffc107; /* Yellow link */
    }

        .tile-link:hover {
            text-decoration: underline;
        }

    /* First-Level Sub-Tiles */
    .sub-tile {
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #fff3cd; /* Light Yellow */
        border-radius: 0.75rem;
        padding: 0.75rem;
        margin-top: 0.3rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        display: none;
        z-index: 10;
        min-width: 220px;
        color: #212529;
    }

    .tile-wrapper:hover > .sub-tile {
        display: block;
    }

    /* Second-Level Sub-Tiles (e.g., nested campus > building) */
    .tile-wrapper .tile-wrapper:hover > .sub-tile {
        display: block;
        left: 100%;
        top: 0;
        background-color: #d1e7dd; /* Light Green */
        color: #212529;
    }

    .row-cols-custom > div {
        flex: 0 0 auto;
        width: 22%;
    }

    @@media (max-width: 768px) {
        .row-cols-custom > div {
            width: 48%;
        }
    }

    @@media (max-width: 576px) {
        .row-cols-custom > div {
            width: 100%;
        }
    }
</style>



<div class="text-center mb-4">
    <h2 class="display-6">Welcome to IUST Asset Management</h2>
    <p class="lead">Manage and navigate university infrastructure with ease</p>
    <p>Visit official website: <a href="https://iust.ac.in" target="_blank">https://iust.ac.in</a></p>
</div>

<div class="row row-cols-custom g-3">
    <!-- Campuses Tile -->
    <div class="col">
        <div class="tile-wrapper text-center p-3 tile-card">
            <div class="tile-icon"><i class="bi bi-building"></i></div>
            <div class="tile-title">Campuses</div>
            <a href="/Campus" class="tile-link">Go to Campuses</a>

            <div class="sub-tile text-start">
                @foreach (var campus in campuses)
                {
                    <div class="mb-1">
                        <a href="/Campus/Details/@campus.ID" class="tile-link">@campus.Name</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Buildings Tile -->
    <div class="col">
        <div class="tile-wrapper text-center p-3 tile-card">
            <div class="tile-icon"><i class="bi bi-house-door"></i></div>
            <div class="tile-title">Buildings</div>
            <a href="/Buildings" class="tile-link">Go to Buildings</a>

            <div class="sub-tile text-start">
                @foreach (var campus in campuses)
                {
                    <div class="tile-wrapper mb-2">
                        <div class="tile-link fw-bold">@campus.Name</div>
                        <div class="sub-tile">
                            @foreach (var building in campus.Buildings)
                            {
                                <div class="mb-1">
                                    <a href="/Buildings/Details/@building.ID" class="tile-link">@building.Building_Name</a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Floors Tile -->
    <div class="col">
        <div class="tile-wrapper text-center p-3 tile-card">
            <div class="tile-icon"><i class="bi bi-layers"></i></div>
            <div class="tile-title">Floors</div>
            <a href="/Floors" class="tile-link">Go to Floors</a>

            <div class="sub-tile text-start">
                <div class="mb-2"><a href="/Departments" class="tile-link">Departments</a></div>
                <div class="mb-2"><a href="/Classrooms" class="tile-link">Classrooms</a></div>
                <div class="mb-2"><a href="/Labs" class="tile-link">Labs</a></div>
                <div class="mb-2"><a href="/Cabins" class="tile-link">Cabins</a></div>
                <div class="mb-2"><a href="/Auditoriums" class="tile-link">Auditoriums</a></div>
                <div class="mb-2"><a href="/MeetingHalls" class="tile-link">Meeting Halls</a></div> <!-- ✅ Added -->
            </div>
        </div>
    </div>

    <!-- Facilities Tile -->
    <div class="col">
        <div class="tile-wrapper text-center p-3 tile-card">
            <div class="tile-icon"><i class="bi bi-tools"></i></div>
            <div class="tile-title">Facilities</div>
            <a href="/Facilities" class="tile-link">Go to Facilities</a>
        </div>
    </div>
</div>
